{
  "name": "node-library-boilerplate",
  "version": "0.0.1",
  "description": "boilerplate for creating nodejs library",
  "main": "lib/index.js",
  "scripts": {
    "compile": "babel -d lib/ src/",
    "cover": "istanbul cover _mocha --report lcovonly -- --recursive --slow 100 --timeout 5000 --compilers js:babel-core/register",
    "coveralls": "npm run cover && cat ./coverage/lcov.info | coveralls",
    "dev": "mocha --watch --slow 100 --timeout 5000 --recursive --compilers js:babel-core/register",
    "test": "mocha --recursive --slow 100 --timeout 5000 --compilers js:babel-core/register",
    "prepublish": "npm run compile"
  },
  "author": "airondumael",
  "license": "ISC",
  "devDependencies": {
    "babel": "^6.3.13",
    "babel-cli": "^6.3.13",
    "babel-preset-es2015": "^6.3.13",
    "chai": "^3.4.1",
    "coveralls": "^2.11.4",
    "istanbul": "^0.4.0",
    "mocha": "^2.3.4",
    "mocha-lcov-reporter": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/airondumael/node-library-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/airondumael/node-library-boilerplate/issues"
  },
  "homepage": "https://github.com/airondumael/node-library-boilerplate"
}
